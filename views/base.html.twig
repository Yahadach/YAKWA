<!DOCTYPE HTML>
<html>

<head>
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>

<body>

    {% block body %}
    <div class="container-fluid">
        Navbar
        <nav class="row navbar navbar-expand-lg " id="navbar">
            <div class="container">
                <a class="navbar-brand" href="#"><img src="img/yakwaLogo.png" alt="logo" width="200px" height="80px"></a>
                <a class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar_collapse" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="far fa-caret-square-down"></i>
                </a>
                <div class="collapse navbar-collapse" id="navbar_collapse">

                    <!--Barre de recherche -->
                    <form class="form-inline my-2 my-lg-0">
                        <input type="search" placeholder="Recherche" aria-label="Search">
                        <button type="submit"><i class="fas fa-search"></i></button>
                    </form>

                    <!--Menus-->
                    <ul class="navbar-nav">


                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-film"></i>
                                <p>Films</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-video"></i>
                                <p>Rechercher un film</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="far fa-plus-square"></i>
                                <p>Proposer un film</p>
                            </a>
                        </li>
                        <!--User-->
                        <li id="user_login">

                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle " href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="far fa-user"></i> Login
                                </a>
                                <div class="dropdown-menu dropdown-menu-right " aria-labelledby="navbarDropdown">
                                    <form>
                                        <div>
                                            <label for="nom">Nom d'utilisateur</label>
                                            <br>
                                            <input type="text" name="nom" id=nom placeholder="">
                                        </div>
                                        <div>
                                            <label for="password">Mot de passe</label>
                                            <br>
                                            <input type="password" name="password" id="password" placeholder="">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Login</button>
                                    </form>
                                </div>
                            </div>
                        </li>
                    </ul>



                </div>
            </div>

        </nav>
    </div>
    <div>
        {% block content %}{% endblock %}
    </div>

    <footer>

    </footer>

    {% endblock %} 
    {% block javascripts %} {% endblock %}

</body>

</html>