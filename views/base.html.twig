<!DOCTYPE HTML>
<html lang="fr">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}{% endblock %}</title>


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link href="/public/css/style.css" rel="stylesheet"> {% block stylesheet %}{% endblock %}
</head>

<body>
    {% block body %}
    <header class="container-fluid" id="header_background">
        {% block header %}
        <!-- Navbar -->
        <nav class="row navbar navbar-expand-lg " id="navbar">
            <div class="container">
                <a class="navbar-brand" href="/home"><img src="/public/img/yakwaLogo.png" alt="logo" width="200px" height="80px"></a>
                <a class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar_collapse" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="far fa-caret-square-down"></i>
                </a>
                <div class="collapse navbar-collapse" id="navbar_collapse">

                    <!--Barre de recherche -->
                    <form class="form-inline my-2 my-lg-0">
                        <input type="search" placeholder="Recherche" aria-label="Search">
                        <button type="submit"><i class="fas fa-search"></i></button>
                    </form>

                    <!--Menus-->
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link" href="/films">
                                <i class="fas fa-film"></i>
                                <p>Films</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-video"></i>
                                <p>Rechercher un film</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/proposer">
                                <i class="far fa-plus-square"></i>
                                <p>Proposer un film</p>
                            </a>
                        </li>
                        <!--User-->
                        <li id="user_login">

                            {# if user.login != null #} {# else #}
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle " href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="/login">
                                    {% if user is null %}
                                    <i class="far fa-user"></i> Login
                                    {% else %}
                                    <i class="far fa-user"></i> {{ user }}
                                    {% endif %}
                                </a>

                                {% if user is null %}
                                <div class="dropdown-menu dropdown-menu-right " aria-labelledby="navbarDropdown">
                                    <form id="loginForm" action="/connexion" method="POST">
                                        <div>
                                            <label for="nom">Nom d'utilisateur</label>
                                            <br>
                                            <input type="text" name="nom" id="nom">
                                        </div>
                                        <div>
                                            <label for="password">Mot de passe</label>
                                            <br>
                                            <input type="password" name="password" id="password" placeholder="">
                                        </div>
                                {% endif %}

                                        {% if user is null %}
                                            <button type="submit" id="btnSubmit" class="btn btn-primary">Login</button>
                                        </form>
                                            <a href="inscription"><button class="btn btn-primary">Inscription</button></a>
                                        {% else %}
                                        <div class="dropdown-menu dropdown-menu-right " aria-labelledby="navbarDropdown">
                                            <a href="/deconnexion" > <button class="btn btn-primary"> Deconnexion </button></a>
                                        </div>
                                        {% endif %}
                                        
                                </div>
                            </div>
                        </li>
                    </ul>



                </div>
            </div>

        </nav>
        
        {% block form %} {% endblock %}
        {% endblock %}

        {% block welcome %}
        {% endblock %}
    </header>




    {% block content %}{% endblock %}

    {% block footer %}
    <footer>

    </footer>
    {% endblock %}

    {% endblock %} {% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
    <script src="public/js/random_background.js"></script>
    {% endblock %}

</body>

</html>