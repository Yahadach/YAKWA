{% extends "base.html.twig" %} {% block title %}YAKWA{% endblock %} {% block header %} {{ parent() }}
<div class="row" id="header_content">
    <div class="container">
        <img id="yakwa-logo" src="/public/img/yakwaLogoTest.png" alt="logo yakwa" width="400px" height="160px">
        <h1>Le site pour tout savoir sur vos films préférés !</h1>
        <a href="/films">Trouver un Film</a>
    </div>
</div>
{% endblock %} {% block content %}

<section id="carousel">
<h2>À (re)découvrir</h2>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
<div class="carousel-inner">

{% for element in films | batch(3) %} {% if loop.first %}
<div class="carousel-item active">
<div class="carousel_container">
{% for film in element %}
<div class="carousel_movie">
<a class="carousel_movie_image" href="/films/{{film.id}}" style="background-image: url('public/img/affiches/{{film.id}}.jpg')"></a>
<a class="carousel_movie_title" href="/films/{{film.id}}">{{film.titre}}</a>
</div> {% endfor %}
</div>
</div>
{% else %}
<div class="carousel-item ">
<div class="carousel_container">
{% for film in element %}
<div class="carousel_movie">
<a class="carousel_movie_image" href="/films/{{film.id}}" style="background-image: url('public/img/affiches/{{film.id}}.jpg')"></a>
<a class="carousel_movie_title" href="/films/{{film.id}}">{{film.titre}}</a>
</div>
{% endfor %}
</div>
</div>
{% endif %} {% endfor %}
</div>
<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
<span class="carousel-control-prev-icon" aria-hidden="true"></span>
<span class="sr-only">Previous</span>
</a>
<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
<span class="carousel-control-next-icon" aria-hidden="true"></span>
<span class="sr-only">Next</span>
</a>
</div>

</section>
